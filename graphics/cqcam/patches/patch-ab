+#if defined(NETBSD)
+void
+outb(unsigned port, uint8_t data)
+{
+	__asm volatile("outb %0,%w1" : : "a" (data), "d" (port));
+}
+
+uint8_t
+inb(unsigned port)
+{
+	uint8_t data;
+	__asm volatile("inb %w1,%0" : "=a" (data) : "d" (port));
+	return data;
+}
+#endif
