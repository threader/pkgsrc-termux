+
+LOCAL BOOL
+has_dotdot(name)
+	char	*name;
+{
+	register char	*p = name;
+
+	while (*p) {
+		if ((p[0] == '.' && p[1] == '.') &&
+		    (p[2] == '/' || p[2] == '\0')) {
+			return (TRUE);
+		}
+		do {
+			if (*p++ == '\0')
+				return (FALSE);
+		} while (*p != '/');
+		p++;
+		while (*p && *p == '/')	/* Skip multiple slashes */
+			p++;
+	}
+	return (FALSE);
+}
