if [ -t 0 -o -t 1 ]
then
	echo 2>&1 "Usage: cat /var/run/dmesg.boot | $0 | xv -"
	exit 1
fi


(
	echo "digraph dmesg { "
	cat \
	| grep -v ^# \
	| perl -ne 'if(/^(\S*) at (\S*) *.*/){
			( $from = $1 ) =~ s/://g; 
			( $to   = $2 ) =~ s/://g; 
			print "\t$from -> $to\n"; 
		}'
	echo "}"
) | dot -Tgif
