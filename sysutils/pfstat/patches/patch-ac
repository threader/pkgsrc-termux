 #ifndef _PF_H_
 #define _PF_H_
 
+#ifdef NetBSD
+#if PF_VERSION > 36
+/* NetBSD has pf+ALTQ since 4.0 (shipped with pf version 3.7) */
+#define HAVE_ALTQ
+#endif /* PF_VERSION > 36 */
+#else
+/* Assume pf+ALTQ for non-NetBSD OS if pf version is at least 3.3 */
+#if PF_VERSION > 32
+#define HAVE_ALTQ
+#endif /* PF_VERSION > 32 */
+#endif /* !__NetBSD__ */
