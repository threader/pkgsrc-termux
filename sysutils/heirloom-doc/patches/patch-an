@@ -10,6 +10,12 @@ usage() {
 }
 
 doit() {
+	if echo "$1" | grep '^[^/]' > /dev/null; then
+		src="`dirname $2`/$1"
+	else
+		src="$1"
+	fi
+	test -f "$src" -o -h "$src" || return 0
 	rm -f -- "$2" || exit
 	exec @LNS@ -- "$1" "$2" || exit
 }
