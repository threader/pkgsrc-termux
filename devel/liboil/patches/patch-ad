+#if defined(__NetBSD__)
+static void
+oil_check_altivec_sysctl_netbsd (void)
+{
+  int ret, av;
+  size_t len;
+
+  len = sizeof(av);
+  ret = sysctlbyname("machdep.altivec", &av, &len, NULL, 0);
+  if (!ret && av) {
+    oil_cpu_flags |= OIL_IMPL_FLAG_ALTIVEC;
+  }
+}
+#endif
+
