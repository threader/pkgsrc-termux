-  *(int *)CMSG_DATA(cmh) = wfd;
+  memcpy(CMSG_DATA(cmh), &wfd, sizeof(int));
 #else /* !HAVE_CMSGHDR */
   mh.msg_accrights = (char *) fdp;
   mh.msg_accrightslen = sizeof (fdp);
