 findbin() {
 	MYP="`echo ${PATH} | sed -e 's/:/ /g'`"
+	eval _var=\"\${${ENVNAME}}\"
+	if test -n "$_var"; then
+		echo "$_var"
+		return
+	fi
 
 	for D in $MYP
 	do
@@ -31,11 +36,13 @@ do
 done
 
 # WC is special
+ENVNAME=WC
 PGM=`findbin wc | head -n 1`
 echo "WC=\"${PGM} -l\""
 echo "WCC=\"${PGM}\""
 
 # DFCMD is an alias for DF
+ENVNAME=DF
 PGM=`findbin df | head -n 1`
 echo "# DF,DFCMD and PS are for compatibility only, NOT USED by the Xymon client"
